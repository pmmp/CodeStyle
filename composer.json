{
    "name": "pocketmine/codestyle",
    "description": "Custom rules used by pocketmine codestyle",
    "type": "library",
    "license": "LGPL-3.0",
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.52",
        "phpstan/phpstan": "~1.10.3",
		"phpstan/extension-installer": "^1.0",
		"phpstan/phpstan-strict-rules": "^1.0.0",
        "phpunit/phpunit": "^9.5 || ^10.0 || ^11.0",
		"phpstan/phpstan-phpunit": "^1.0"
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "autoload": {
        "psr-4": {
            "pocketmine\\codestyle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "pocketmine\\codestyle\\tests\\": "tests/"
        }
    }
}
